{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/extend-subagnet-input-prompt-with-io-tools.py\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "backend-toolbox:*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/auto-save-signal-on-stop.py\""
          }
        ]
      }
    ]
  }
}
