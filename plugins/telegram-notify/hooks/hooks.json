{
  "hooks": {
    "Stop": [
      {
        "matcher": "end_turn",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/telegram-notify.py Finished"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/telegram-notify.py 'Action Required'"
          }
        ]
      }
    ]
  }
}
